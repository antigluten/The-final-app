<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogTextViewSignUp"
        android:layout_width="243dp"
        android:layout_height="32dp"
        android:layout_marginTop="0dp"
        android:text="Sign up"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/reply_blue_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialogPasswordSignUp"
        android:layout_width="243dp"
        android:layout_height="40sp"
        android:ems="10"
        android:textSize="18sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:fontFamily="@font/work_sans"
        android:inputType="textPassword"
        android:layout_marginTop="12sp"
        android:background="@drawable/deck"
        android:hint="Enter your password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogUsernameSignUp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/dialogUsernameSignUp"
        android:layout_width="243dp"
        android:layout_height="40sp"
        android:ems="10"
        android:textSize="18sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:fontFamily="@font/work_sans"
        android:inputType="textPersonName"
        android:layout_marginTop="12sp"
        android:background="@drawable/deck"
        android:drawableStart="@drawable/ic_profile"
        android:drawablePadding="10dp"
        android:hint="Enter your username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogTextViewSignUp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/dialogEmailSignUp"
        android:layout_width="243dp"
        android:layout_height="40sp"
        android:ems="10"
        android:textSize="18sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:fontFamily="@font/work_sans"
        android:inputType="textEmailAddress"
        android:layout_marginTop="12sp"
        android:background="@drawable/deck"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="10dp"
        android:hint="Enter your email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogPasswordSignUp"
        tools:ignore="RtlSymmetry" />


    <Button
        android:id="@+id/dialogCardButtonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Register"
        app:layout_constraintStart_toEndOf="@+id/dialogCardButtonCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogEmailSignUp" />

    <Button
        android:id="@+id/dialogCardButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/cancelDeck"
        app:layout_constraintEnd_toStartOf="@+id/dialogCardButtonAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogEmailSignUp" />

</androidx.constraintlayout.widget.ConstraintLayout>